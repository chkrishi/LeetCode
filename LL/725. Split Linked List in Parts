#Same idea but better implementaiton --> inspired by ChatGPT, written by me

class Solution:
    def splitListToParts(self, head: Optional[ListNode], k: int) -> List[Optional[ListNode]]:
        val = 0
        temp = head
        arr = []

        while temp:
            temp = temp.next
            val += 1
        split_val = val // k
        carry_val = val % k

        temp = head

        for _ in range(k):
            length = split_val + (1 if carry_val > 0 else 0)
            if carry_val > 0:
                carry_val -= 1
            
            dummy = temp
            retval = None
            for i in range(length):
                retval = temp
                temp = temp.next
            if retval:
                retval.next = None
            arr.append(dummy)
        
        return arr



        

#Had a solution but TLE, so i had to take help from soln's section
class Solution:
    def nextLargerNodes(self, head: Optional[ListNode]) -> List[int]:
        arr = []
        temp = head
        while temp:
            curr = temp.next
            while curr and curr.val <= temp.val:
                curr = curr.next
            if curr and temp.val <= curr.val:
                arr.append(curr.val)
            else:
                arr.append(0)
            temp = temp.next
        return arr

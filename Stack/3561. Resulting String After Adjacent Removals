#MY CODE ACCEPTED BUT VERY SLOW. 
class Solution:
    def resultingString(self, s: str) -> str:
        arr = []
        for i in s:
            arr.append(ord(i))
        flag = 1
        print(arr)
        while flag == 1:
            flag = 0
            i = 1
            while i < len(arr):
                val = abs(arr[i - 1] - arr[i])
                if val == 1 or val == 25:
                    del arr[i - 1:i + 1]
                    flag = 1
                    i = max(i - 1, 1)
                else:
                    i += 1
        print(arr)
        s = ''
        for i in arr:
            s += chr(i)
        return s

import math
class Solution:
    def judgeSquareSum(self, c: int) -> bool:
        left = 0
        right = int(math.sqrt(c))
        while left <= right:
            sumval = (left)**2 + (right)**2
            if c == sumval:
                return True
            elif sumval < c:
                left += 1
            else:
                right -= 1
        return False

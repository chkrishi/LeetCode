#mY soln --> Accpeted but the above is better
class Solution:
    def findClosestElements(self, arr: List[int], k: int, x: int) -> List[int]:
        val = []
        temp = []
        for i in arr:
            val.append([abs(i - x),i])
        val = sorted(val,key = lambda x: (x[0],x[1]))
        temp.append(val[0][1])
        for i in range(1,len(val)):
            if val[i-1][0] == val[i][0]:
                temp.append(max(val[i-1][1],val[i][1]))
            else:
                temp.append(val[i][1])
        return sorted(temp[:k])

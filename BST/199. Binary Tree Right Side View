#My own soln --> Accepted
class Solution:
    def rightSideView(self, root: Optional[TreeNode]) -> List[int]:
        arr = []
        if not root:
            return arr

        arr.append(root.val)
        temp = deque([root])
        
        while temp:
            temparr = []
            for i in range(len(temp)):     
                node = temp.popleft()
                if node.left:
                    temparr.append(node.left.val)
                    temp.append(node.left)
                if node.right:
                    temparr.append(node.right.val)
                    temp.append(node.right)
            if temparr:
                arr.append(temparr[-1])
        return arr   
